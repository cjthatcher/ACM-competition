#adminPage

  .subview
    margin-left: 120px

  .cust-nav
    float: left
    height: 100%
    background-color: #111 //rgb(83, 83, 83)
    padding: 10px 0
    position: fixed

  .cust-nav2
    background-color: #333 //rgb(83, 83, 83)
    padding: 10px 0
    position: fixed

  .active-item
    // background-color: #818181
    position: relative

    .triangle
      display: block

  .triangle
    display: none

    background: white
    position: absolute
    top: 10px
    right: 0
    height: 0
    border: 10px solid #111
    border-right: 12px solid white

    &.is-second-nav
      border: 10px solid blue
      border-right: 12px solid white

    &.is-result-tab
      border-right: 12px solid #333

  .nav-item
    padding: 10px
    width: 100px
    color: rgb(27, 219, 255)


    &:hover
      color: rgb(83, 83, 83)

      &+.triangle
        border: 10px solid #eee
        border-right: 12px solid white

        &.is-result-tab
          border-right: 12px solid #333

  .desc-box
    max-width: 250px
    word-break: break-word
    max-height: 100px
    overflow: scroll

.q-area
  width: 530px

.q-input
  display: inline-block
