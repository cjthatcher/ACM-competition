#adminPage

  .subview
    display: inline-block
    max-width: 820px
    overflow: scroll

  .nav
    float: left
    height: 100%
    background-color: rgb(83, 83, 83)
    padding: 10px 0

  .nav-item
    padding: 10px
    width: 100px
    color: rgb(27, 219, 255)

    &:hover
      color: rgb(83, 83, 83)

  .event-create
    float: left
    margin-right: 15px
    border-right: 1px solid #EEE
    padding-right: 15px

  .event-list
    float: left
    width: 547px

  .desc-box
    max-width: 250px
    word-break: break-word
    max-height: 100px
    overflow: scroll
