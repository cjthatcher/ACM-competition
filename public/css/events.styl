.event
  padding: 10px
  cursor: pointer
  border-bottom: 1px solid

  &:last-child
    border-bottom: none

  &:hover
    background-color: #a77a7a

  &.available
    &:hover
      background-color: #7aa77a

#eventPage

  .subview
    margin-left: 150px

  .nav
    float: left
    height: 100%
    background-color: rgb(83, 83, 83)
    padding: 10px 0

  .nav-item
    padding: 10px
    width: 100px
    color: rgb(27, 219, 255)

    &:hover
      color: rgb(83, 83, 83)

  .indent-in
    padding: 0 0 10px 50px
